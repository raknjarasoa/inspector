{
  "manifest_version": 2,
  "name": "ngneat-inspector",
  "description": "A chrome extension to inspect and change Angular component properties, by ngneat.",
  "version": "0.1.0",
  "permissions": ["storage", "declarativeContent", "activeTab"],
  "background": {
    "scripts": ["background.js"],
    "persistent": false
  },
  "page_action": {
    "default_title": "Start inspecting with ng-neat/inspector",
    "default_popup": "popup/popup.html"
  },
  "content_scripts": [
    {
      "matches": ["*://*/"],
      "js": ["content-script.js"],
      "run_at": "document_end"
    }
  ],
  "content_security_policy": "script-src 'self' 'unsafe-eval'; object-src 'self'",
  "web_accessible_resources": ["in-app.js", "constants.js", "ng-check.js"],
  "icons": {
    "16": "assets/images/ngneat_16.png",
    "32": "assets/images/ngneat_32.png",
    "48": "assets/images/ngneat_48.png",
    "128": "assets/images/ngneat_128.png"
  }
}
