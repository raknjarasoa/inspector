{
  "manifest_version": 2,
  "name": "ngneat-inspector",
  "description": "A chrome extension to inspect and change Angular component properties, by ngneat.",
  "version": "0.1.0",
  "permissions": ["storage", "declarativeContent", "activeTab", "tabs"],
  "background": {
    "scripts": ["background.js"],
    "persistent": false
  },
  "page_action": {
    "default_title": "ng-neat inspector",
    "default_popup": "app/popup/index.html"
  },
  "content_scripts": [
    {
      "matches": ["*://*/"],
      "js": ["content_script.js"],
      "run_at": "document_end"
    }
  ],
  "content_security_policy": "script-src 'self' 'unsafe-eval'; object-src 'self'",
  "web_accessible_resources": [
    "inject/index.js",
    "inject/index.html",
    "assets/css/light-border.css",
    "assets/css/tippy.css"
  ],
  "icons": {
    "16": "assets/images/ngneat_16.png",
    "32": "assets/images/ngneat_32.png",
    "48": "assets/images/ngneat_48.png",
    "128": "assets/images/ngneat_128.png"
  }
}
