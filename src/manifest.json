{
  "manifest_version": 2,
  "name": "Angular Properties",
  "description": "A chrome extension to inspect and change Angular component properties.",
  "version": "1.0.0",
  "permissions": ["storage", "declarativeContent", "activeTab"],
  "background": {
    "scripts": ["background.js"],
    "persistent": false
  },
  "page_action": {
    "default_title": "Open Popup!",
    "default_popup": "popup.html"
  },
  "content_scripts": [
    {
      "matches": ["*://*/"],
      "js": ["content-script.js"],
      "run_at": "document_end"
    }
  ],
  "content_security_policy": "script-src 'self' 'unsafe-eval'; object-src 'self'",
  "web_accessible_resources": ["in-app.js", "constants.js", "ng-check.js"]
}
