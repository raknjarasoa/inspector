{
  "name": "@ngneat/inspector",
  "version": "1.0.0",
  "schematics": "./schematics/collection.json",
  "scripts": {
    "build": "tsc -p tsconfig.schematics.json",
    "copy:schemas": "cp --parents schematics/*/schema.json ../../../dist/ngneat/inspector/",
    "copy:collection": "cp schematics/collection.json ../../../dist/ngneat/inspector/schematics/collection.json",
    "postbuild": "npm run copy:schemas && npm run copy:collection"
  },
  "peerDependencies": {
    "@angular/common": "^10.1.3",
    "@angular/core": "^10.1.3",
    "prismjs": "^1.21.0"
  },
  "dependencies": {
    "tslib": "^2.0.0"
  },
  "devDependencies": {
    "bootstrap": "^4.5.2"
  },
  "keywords": [
    "angular",
    "angular 2",
    "inspector"
  ],
  "license": "MIT",
  "publishConfig": {
    "access": "public"
  },
  "bugs": {
    "url": "https://github.com/ngneat/inspector/issue"
  },
  "homepage": "https://github.com/ngneat/inspector#readme",
  "repository": {
    "type": "git",
    "url": "https://github.com/ngneat/inspector"
  },
  "ng-add": {
    "save": "devDependencies"
  }
}
